{
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@styles/*": [
        "./src/app/styles/*"
      ],
      "@public/*": [
        "./public/*"
      ]
    },
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "src/app/authentication",
    "src/app/chat",
    "src/**/(no-usages)*.ts(x)",
    "src/**/(no-usages)*"
  ],
  "references": [{ "path": "./tsconfig.node.json"}]
}
